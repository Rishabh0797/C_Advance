#include<stdio.h>
void create_array(int [10][10],int,int);
void display_array(int [10][10],int,int);
int prime_number(int);
void check_array(int [10][10],int,int);
int main()
{
    int a[10][10],row,col,flag=0;
    printf("Enter rows and columns= ");
    scanf("%d %d",&row,&col);
    create_array(a,row,col);
    printf("\n");
    display_array(a,row,col);
    check_array(a,row,col);
    return 0;
}
void create_array(int a[10][10],int row,int col)
{
    int i,j;
    for(i=0;i<row;i++)
    {
        for(j=0;j<col;j++)
        {
            scanf("%d",&a[i][j]);
        }
    }
}
void display_array(int a[10][10],int row,int col)
{
    int i,j;
    for(i=0;i<row;i++)
    {
        for(j=0;j<col;j++)
        {
            printf("%d ",a[i][j]);
        }
        printf("\n");
    }
}
int prime_number(int n)
{
    int i,flag=0;
    for(i=2;i<=(n/2);i++)
    {
       if(n%i==0)
       flag=1;
    }
    return(flag);
}
void check_array(int a[10][10],int row,int col)
{
    int i,j,flag=0;
    for(i=0;i<row;i++)
    {
        flag=0;
        printf("\nPrime number in col %d=",i+1);
        for(j=0;j<col;j++)
        {
            flag=prime_number(a[j][i]);
            if(flag==0 && a[j][i]!=1)      //printing prime number
            printf(" %d",a[j][i]);
            flag=0;
        }
    }
}
