#include<stdio.h>

int main()                                                           //1
{                                                                    //12
    int i=0,j=0,n;                                                   //123
    printf("Enter number upto which you want pattern :");            //1234.........n
    scanf("%d",&n);
     printf("\n");
    for(i=1;i<=n;i++)
    {
        for(j=1;j<=i;j++)
        {
            printf("%d",j);
        }
        printf("\n");
    }
   return 0;
}
