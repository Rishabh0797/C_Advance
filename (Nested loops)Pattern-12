#include <stdio.h>

int main()
{
    int i,j,sp=4,n=1;
    for(i=1;i<=5;i++)
    {
        printf("\n");
        for(j=1;j<=sp;j++)                
        {                                           //    *
            printf(" ");                            //   ***
        }                                           //  *****
        for(j=1;j<=n;j++)                           // *******
        {                                           //*********.....
            printf("*");
        }
        sp=sp-1;
        n+=2;
    }
    return 0;
}
