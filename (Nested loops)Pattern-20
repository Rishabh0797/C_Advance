#include <stdio.h>

int main()
{
    int i,j,n;
    n=5;
    for(i=1;i<=n;i++)
    {
        printf("\n");
        for(j=1;j<=(n-i);j++)                 //The heart
        {
            printf(" ");
        }
        for(j=1;j<=i;j++)
        {
            printf("*");
        }
        for(j=1;j<i;j++)
        {
            printf("*");
        }
        for(j=1;j<=(n-i);j++)
        {
            printf("  ");
        }
        for(j=1;j<=i;j++)
        {
            printf("*");
        }
        for(j=1;j<i;j++)
        {
            printf("*");
        }
    }
 int t=0;
    printf("\n");
    for(i=1;i<=9;i++)
    {
        for(j=1;j<i;j++)
        {
            printf(" ");
        }
        for(j=1;j<=18-t;j++)
        {
            printf("*");
        }
        printf("\n");
        t+=2;
    }

    return 0;
}
